<br><br>
<div class="container">
	<style>
	thead{
		background-color:lightblue;
		
	}
	</style>
	
	 <%= form_tag students_path, :method=>'get' do %>
	 <form><%= text_field_tag :search, params[:search] %>
	 <button class="btn btn-outline-primary" type="submit">Search</button>

	 <%end %></form>

	 <br>

	<table class="table table-striped table-bordered">
		<thead >
			<tr>
				<th >STUDENT NAME</th>
				<th >REGD NUMBER</th>
				<th >SECTION</th>
				<th colspan="3"></th>
				
			</tr>
		</thead>

	   <tbody>
	   <% @students.each do |student| %>
	   	   <tr>
	   		   <td><%=student.student_name %></td>
	   		   <td><%=student.roll%></td>
	   		   <td><%=student.section%></td>
	   		   <td><%=link_to 'Show',student_path(student)%></td>
	   		   <td><%=link_to 'Edit',edit_student_path(student)%></td>
	   		   <td><%=link_to 'Delete', student_path(student), data: { "turbo-method": :delete,turbo_confirm: "Are you sure?" } %></td>
	   	   </tr>

	   <%end %>

	   </tbody>

	</table>
	<p>
	<%=link_to'new article',new_student_path ,class:"btn btn-secondary"%>
	</p>
</div>